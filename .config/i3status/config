general {
        colors = true
        interval = 5
        output_format = "i3bar"
        colors = true
        color_good = "#B9CA4A"
        color_degraded = "#E7C547"
        color_bad = "#D54E53"
}

order += "ethernet _first_"
order += "tztime local"

ethernet _first_ {
        format_up = "CONNECTED"
        format_down = "NO CONNECTION"
}

tztime local {
        format = "%H:%M - %d/%m/%Y"
}
